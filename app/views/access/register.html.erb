<%= link_to("<< Back to login", {:action => 'login'}, :class => 'back-link') %>

<div class = "user show">
  <h2> Sign Up </h2>
 <%= form_for(:user, :url => {:controller => 'access', :action => 'register'}) do |f|%>
  <table summary = "User Form Fields">
    <tr>
      <th>Full Name</th>
      <td><%= f.text_field(:full_name) %></td>
    </tr>
    <tr>
      <th>Email</th>
      <td><%= f.text_field(:email) %></td>
    </tr>
    <tr>
      <th>Username</th>
      
      <td><%= f.text_field(:username) %></td>
    </tr>
    <tr>
      <th>Password</th>
      
      <td><%= f.password_field(:password) %></td>
    </tr>
    <tr>
      <th>Retype your password</th>
      
      <td><%= f.password_field(:password_confirmation) %></td>>
    </tr>
  </table>
  <div class = "form-buttons">
    <%= f.submit("Sign Up !")%>
  </div>
<% end %>
<% if @user.errors.any? %>
    <ul class="Signup_Errors">
    <% for message_error in @user.errors.full_messages %>
      <li>* <%= message_error %></li>
    <% end %>
    </ul>
  <% end %>
</div>
